# Rhone Risk Policy Analysis API - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED - Railway/Production
# ===========================================

# Claude API Key (required for policy analysis)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Webhook secret for signature verification (must match CRM's WEBHOOK_SECRET)
# Generate with: openssl rand -hex 32
WEBHOOK_SECRET=your-secure-webhook-secret

# ===========================================
# SUPABASE - Report Storage + Status Persistence
# ===========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key

# ===========================================
# OPTIONAL - Defaults provided
# ===========================================

# Server port (Railway provides this automatically)
PORT=8000

# Environment (development | production)
ENVIRONMENT=production

# CORS origins (JSON array of allowed origins)
CORS_ORIGINS=["https://your-frontend.vercel.app"]

# Claude model settings
CLAUDE_MODEL=claude-sonnet-4-20250514
EXTRACTION_MODEL=claude-haiku-4-5-20251001
CLAUDE_MAX_TOKENS=16384
USE_TWO_PHASE=true

# Request timeouts (seconds)
CALLBACK_TIMEOUT=30

# Branding
COMPANY_NAME=Rhone Risk Advisory
PRIMARY_COLOR=#162B4D
ACCENT_COLOR=#0CBDDB
